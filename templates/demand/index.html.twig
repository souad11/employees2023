{% extends 'base.html.twig' %}

{% block title %}Demand index{% endblock %}

{% block body %}
    <h1>Demand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employee</th>
                <th>Type</th>
                <th>About</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demand in demands %}
            
            <tr>
                <td>{{ demand.id }}</td>
                <td>{{ demand.employe.id }}</td>
                <td>{{ demand.type }}</td>
                <td>{{ demand.about }}</td>
                <td>{{ demand.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_demand_show', {'id': demand.id}) }}">show</a>
                    <a href="{{ path('app_demand_edit', {'id': demand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demand_new') }}">Create new</a>
{% endblock %}
