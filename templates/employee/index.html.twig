{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>
    {# Formulaire de recherche #}
    <form method="get" action="{{ path('app_employee_index') }}">
        <label for="search">Search:</label>
        <input type="text" id="search" name="search" value="{{ searchTerm }}">
        <button type="submit">Search</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th><a href="{{ path('app_employee_index', {'sort': 'id', 'direction': sortField == 'id' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">Id</a></th>
                <th><a href="{{ path('app_employee_index', {'sort': 'birthDate', 'direction': sortField == 'birthDate' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">BirthDate</a></th>
                <th><a href="{{ path('app_employee_index', {'sort': 'firstName', 'direction': sortField == 'firstName' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">FirstName</a></th>
                <th><a href="{{ path('app_employee_index', {'sort': 'lastName', 'direction': sortField == 'lastName' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">LastName</a></th>
                <th><a href="{{ path('app_employee_index', {'sort': 'gender', 'direction': sortField == 'gender' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">Gender</a></th>
                <th><a href="{{ path('app_employee_index', {'sort': 'hireDate', 'direction': sortField == 'hireDate' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}">HireDate</a></th>
                <th>Photo</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in pagination %}
            
            <tr>
                <td>{{ employee.id }}</td>
                
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ employee.firstName }}</td>
                <td>{{ employee.lastName }}</td>
                <td>{{ employee.gender.value}}</td>
                <td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
                <td>{% if employee.getPhoto() %}
                        <img src="{{ asset('uploads/photos/' ~ employee.id ~ '/' ~ employee.photo()) }}" alt="photo" width="100">
                        {% if app.user.id == employee.id %}
                        <a href="{{ asset('uploads/photos/' ~ employee.id ~ '/' ~ employee.photo()) }}" download>Download</a>
                        {% endif %}
                    {% else %}
                        <p>Aucune photo disponible</p>
                    {% endif %}
                </td>
                <td>{{ employee.email }}</td>
                <td>
                    <a href="{{ path('app_employee_show', {'id': employee.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
                {% endif %}
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination" style="width: 100%; display: flex; justify-content: center;">
        {{ knp_pagination_render(pagination) }}
    </div>
    

{% if is_granted('ROLE_ADMIN') %} {# ou {{ 'ROLE_ADMIN' in app.user.roles }}#}
    <a href="{{ path('app_employee_new') }}">Create new</a>
{% endif %}
{% endblock %}
