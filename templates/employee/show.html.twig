{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ employee.gender.value }}</td>
            </tr>
            <tr>
                <th>HireDate</th>
                <td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td> <img src="{{ asset('uploads/photos/' ~ employee.photo) }}" alt="photo" width="100"></td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
        </tbody>
    </table>
            <h1>Demands</h1>
            {% for demand in employee.demands %}
                <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>About</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ demand.id }}</td>
                        <td>{{ demand.type}}</td>
                        <td>{{ demand.status is not null ? (demand.status == 1 ? 'Accepted' : 'Refused') : 'En cours' }}</td>
                        <td>{{ demand.about }}</td>
                        <td class="d-flex">
                            <form class="form-inline" action="{{ path('app_demand_update_status', {'id': demand.id, 'status': 1}) }}" method="post">
                                <button class="btn btn-success" type="submit"><i class="fas fa-check"></i></button>
                            </form>
                        
                            <form class="form-inline" action="{{ path('app_demand_update_status', {'id': demand.id, 'status': 0}) }}" method="post">
                                <button class="btn btn-danger" type="submit"><i class="fas fa-times"></i></button>
                            </form>
                        </td>
                    <tr>
                </tbody>
            {% endfor %}
            </table>


    <a href="{{ path('app_employee_index') }}">back to list</a>

{% if is_granted('ROLE_ADMIN') %} {# ou {{ 'ROLE_ADMIN' in app.user.roles }}#}
    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
{% endif %}
    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
